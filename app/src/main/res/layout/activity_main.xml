<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tyroo.mopubadsample.MainActivity">

    <Button
        android:id="@+id/btn_interstitial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="Show Interstitial"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_native_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_interstitial"
        android:text="Show Native Video" />

    <RelativeLayout
        android:id="@+id/native_video_ad"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="#d7d7d7"
        app:layout_constraintTop_toBottomOf="@+id/btn_native_ad">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:text="Native ad will appear here"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
